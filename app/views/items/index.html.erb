<h1>Listing items</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>title</th>
    <th></th>


  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= image_tag(item.image.small_thumb, :class => 'thumbnail') if item.image? %></td>
    <td><%= item.title %></td>
    <td><%= link_to 'Show', item %> | <%= link_to 'Edit', edit_item_path(item) %> | <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

